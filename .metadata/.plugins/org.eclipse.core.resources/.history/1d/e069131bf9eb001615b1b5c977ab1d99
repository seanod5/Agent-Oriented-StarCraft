agent TerranCommandCenter {
	module EIS eis;
	module Console C;
	module System S;
	module Prelude P;
	
	initial !init();
	
	rule +!init() {
		eis.join("starcraft");
		eis.link();
		C.println("Command Center online.");
		
		!deploySCV();
	}
	
//	rule +$eis.event(string entity, unitAmount("TerranSCV", int amount)) : amount > 50 {
//		
//	}
	
	rule +!deploySCV() {
		eis.train("Terran SCV");
		C.println("Deploying SCV");
	}
	
	rule +$eis.event(map(int width, int height)) {
		C.println("Map dimensions: Width = " + width + ", Height = " + height);
	}
}